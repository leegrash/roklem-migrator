<configuration>
    <system.diagnostics>
        <sources>
            <!-- This section defines the logging configuration for My.Application.Log -->
            <source name="DefaultSource" switchName="DefaultSwitch">
                <listeners>
                    <add name="FileLog"/>
                    <!-- Uncomment the below section to write to the Application Event Log -->
                    <!--<add name="EventLog"/>-->
                </listeners>
            </source>
        </sources>
        <switches>
            <add name="DefaultSwitch" value="Information"/>
        </switches>
        <sharedListeners>
            <!-- Changed the FileLog to use a more appropriate logging provider for .NET Core -->
            <add name="FileLog" type="Microsoft.Extensions.Logging.File.FileLoggerProvider, Microsoft.Extensions.Logging.File" initializeData="FileLogWriter"/>
            <!-- Uncomment the below section and replace APPLICATION_NAME with the name of your application to write to the Application Event Log -->
            <!--<add name="EventLog" type="System.Diagnostics.EventLogTraceListener" initializeData="APPLICATION_NAME"/> -->
        </sharedListeners>
    </system.diagnostics>
</configuration>

<!-- Changes made:
1. Updated the logging configuration to use Microsoft.Extensions.Logging instead of the old .NET Framework logging provider.
2. Retained comments on EventLog and removed unnecessary sections not applicable to .NET Core 6.0.
3. Ensured compatibility with .NET 6.0 by removing startup configuration section. -->